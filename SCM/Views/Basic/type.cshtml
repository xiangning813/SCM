<head>
    <link href="~/layui/css/layui.css" rel="stylesheet" />
</head>

<body>
    <div id="app">
        <div class="sub-heard-part">
            <ol class="breadcrumb m-b-0">
                <li><a href="#" onclick='$("#div1").load("/basic/Index")'>基础数据</a></li>
                <li><a href="#">商品分类</a></li>
                <input style="float: right" class="btn btn-default btn-xs" type="submit" value="添加大类别" v-on:click="ShowPage()">
            </ol>

        </div>

        <div class="graph">
            <div class="row">
                <form class="form-inline">
                    <div class="form-group">
                        <div class="input-group">
                            <div class="input-group-addon">大类别:</div>
                            <input type="text" class="form-control" id="exampleInputAmount" placeholder="输入大类别名称">
                        </div>
                    </div>
                    <div class="form-group">
                        <div class="input-group">
                            <input class="btn btn-default btn-lg" type="submit" value="查询">
                        </div>
                    </div>

                </form>
            </div>
            <div class="tables row">
                <table class="table table-striped table-bordered table-hover table-condensed">
                    <thead>
                        <tr>
                            <th>#</th>
                            <th>大类别名称</th>
                            <th>操作</th>
                        </tr>
                    </thead>
                    <tbody>
                        <tr>
                            <th scope="row">1</th>
                            <td>软件类</td>
                            <td><a href="javascript:;">删除</a> | <a href="javascript:;" v-on:click="ShowPage(1)">修改</a>| <a href="javascript:;">添加小类别</a></td>
                        </tr>
                        <tr>
                            <th scope="row">2</th>
                            <td>文学类</td>
                            <td><a href="javascript:;">删除</a> | <a href="javascript:;">修改</a>| <a href="javascript:;">添加小类别</a></td>
                        </tr>
                        <tr>
                            <th scope="row">3</th>
                            <td>电影类</td>
                            <td><a href="javascript:;">删除</a> | <a href="javascript:;">修改</a> | <a href="javascript:;">添加小类别</a></td>
                        </tr>

                    </tbody>
                </table>
                <div align="center">
                    <nav aria-label="Page navigation">
                        <ul class="pagination">
                            <li>
                                <a href="#" aria-label="Previous">
                                    <span aria-hidden="true">&laquo;</span>
                                </a>
                            </li>
                            <li><a href="#">1</a></li>
                            <li><a href="#">2</a></li>
                            <li><a href="#">3</a></li>
                            <li><a href="#">4</a></li>
                            <li><a href="#">5</a></li>
                            <li>
                                <a href="#" aria-label="Next">
                                    <span aria-hidden="true">&raquo;</span>
                                </a>
                            </li>
                        </ul>
                    </nav>
                </div>

            </div>
        </div>
    </div>

    <script src="~/js/vue-2.5.2.min.js"></script>
    <script src="~/js/jquery-1.10.2.min.js"></script>
    <script src="~/layer/layer.js"></script>
    <script src="~/layui/layui.all.js"></script>
    <script>
        var myVue = new Vue({
            el: "#app",
            methods: {
                //跳转到添加/修改页面
                ShowPage: function (id) {
                    var url = "";
                    var mes = "";
                    if (!id) {
                        url = "/basic/typeadd";
                        mes = "添加成功!";
                    } else {
                        url = "/basic/typeedit?id=" + id;
                        mes = "修改成功!";
                    }
                    layer.open({
                        type: 2,
                        shade: false,
                        area: ['500px', '550px'],
                        maxmin: true,
                        moveOut: true,
                        content: url,
                        btn: ["确定", "取消"],
                        yes: function (index, layerobj) {

                        },
                        zIndex: layer.zIndex,
                        end: function () { //子页面关闭时调用
                            layer.alert(mes);
                        }
                    });
                }
            }
        });
    </script>
</body>